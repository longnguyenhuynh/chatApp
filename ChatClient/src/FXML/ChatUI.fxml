<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXListView?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="titleBar" prefHeight="700.0" prefWidth="800.0" style="-fx-background-color: #797676;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ChatController">
    <children>
        <Pane prefHeight="700.0" prefWidth="220.0" style="-fx-background-color: #272E36;">
            <children>
                <JFXTextField fx:id="userName" editable="false" focusColor="WHITE" labelFloat="true" layoutX="10.0" layoutY="14.0" prefHeight="26.0" prefWidth="200.0" style="-fx-text-fill: #ffffff;" unFocusColor="WHITE">
                    <font>
                        <Font size="14.0" />
                    </font>
                </JFXTextField>
                <JFXListView fx:id="onlineList" layoutY="85.0" prefHeight="615.0" prefWidth="220.0" style="-fx-background-color: #272E36;" />
                <JFXButton layoutX="45.0" layoutY="51.0" onAction="#createGroupChat" prefHeight="28.0" prefWidth="130.0" style="-fx-background-color: #03DAC5;" text="Create Group">
                    <font>
                        <Font size="14.0" />
                    </font>
                </JFXButton>
            </children>
        </Pane>
        <Pane layoutX="220.0" layoutY="640.0" prefHeight="60.0" prefWidth="580.0" style="-fx-background-color: #ffffff;">
            <children>
                <ImageView fitHeight="30.0" fitWidth="30.0" layoutX="536.0" layoutY="15.0" onMouseClicked="#buttonSend" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../assets/send.png" />
                    </image>
                </ImageView>
                <JFXTextField fx:id="message" focusColor="#4d4d4d" layoutX="44.0" layoutY="17.0" onKeyPressed="#textBoxSend" prefHeight="26.0" prefWidth="482.0" promptText="Enter your message" />
            <ImageView fitHeight="30.0" fitWidth="30.0" layoutX="8.0" layoutY="15.0" onMouseClicked="#fileSend" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../assets/attach.png" />
               </image>
            </ImageView>
            </children>
        </Pane>
        <JFXListView fx:id="chatBox" layoutX="220.0" prefHeight="639.0" prefWidth="580.0" />
        <ImageView fx:id="add" fitHeight="30.0" fitWidth="30.0" layoutX="726.0" layoutY="14.0" onMouseClicked="#groupAdd" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../assets/baseline_add_black_48dp.png" />
            </image>
        </ImageView>
        <ImageView fx:id="remove" fitHeight="30.0" fitWidth="36.0" layoutX="756.0" layoutY="14.0" onMouseClicked="#groupRemove" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../assets/baseline_remove_black_48dp.png" />
            </image>
        </ImageView>
    </children>
</AnchorPane>
