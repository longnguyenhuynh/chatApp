<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #121212;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.LoginController">
    <children>
        <JFXTextField fx:id="username" focusColor="#03dac6" layoutX="175.0" layoutY="124.0" prefWidth="250.0" promptText="Username" style="-fx-text-fill: #ffffff;">
            <font>
                <Font size="16.0" />
            </font></JFXTextField>
        <ImageView fitHeight="100.0" fitWidth="100.0" layoutX="250.0" layoutY="4.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../assets/tick.png" />
            </image>
        </ImageView>
        <ImageView fitHeight="57.0" fitWidth="53.0" layoutX="110.0" layoutY="113.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../assets/user.png" />
            </image>
        </ImageView>
        <ImageView fitHeight="57.0" fitWidth="53.0" layoutX="110.0" layoutY="174.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../assets/lock.png" />
            </image>
        </ImageView>
        <ImageView fx:id="progress" fitHeight="100.0" fitWidth="100.0" layoutX="250.0" layoutY="320.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../assets/loading.gif" />
            </image>
        </ImageView>
        <JFXButton fx:id="login" alignment="CENTER" layoutX="250.0" layoutY="237.0" onAction="#loginAction" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #03dac6;" text="Login">
            <font>
                <Font size="16.0" />
            </font>
        </JFXButton>
        <JFXButton fx:id="signup" alignment="CENTER" layoutX="486.0" layoutY="14.0" onAction="#signUpDisplay" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #03dac6;" text="Sign Up">
            <font>
                <Font size="16.0" />
            </font>
        </JFXButton>
        <JFXTextField fx:id="alert" alignment="CENTER" editable="false" focusColor="WHITE" layoutX="190.0" layoutY="292.0" prefHeight="28.0" prefWidth="221.0" style="-fx-text-fill: #ffffff;" text="Wrong Username Or Password" unFocusColor="WHITE">
            <font>
                <Font size="14.0" />
            </font>
        </JFXTextField>
      <JFXPasswordField fx:id="password" focusColor="#03dac6" layoutX="175.0" layoutY="194.0" prefHeight="32.0" prefWidth="250.0" promptText="Password" style="-fx-text-fill: #ffffff;">
         <font>
            <Font size="16.0" />
         </font>
      </JFXPasswordField>
    </children>
</AnchorPane>
