<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: #121212;"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.LoginController">
    <children>
        <JFXTextField fx:id="username" focusColor="#03dac6" layoutX="75.0" layoutY="150.0" prefWidth="300.0"
                      promptText="Username" onKeyPressed="#login" style="-fx-text-fill: #ffffff;">
            <font>
                <Font size="16.0"/>
            </font>
        </JFXTextField>
        <ImageView fitHeight="100.0" fitWidth="100.0" layoutX="150.0" layoutY="14.0" pickOnBounds="true"
                   preserveRatio="true">
            <image>
                <Image url="@../assets/tick.png"/>
            </image>
        </ImageView>
        <ImageView fitHeight="57.0" fitWidth="50.0" layoutX="14.0" layoutY="141.0" pickOnBounds="true"
                   preserveRatio="true">
            <image>
                <Image url="@../assets/user.png"/>
            </image>
        </ImageView>
        <JFXButton fx:id="login" alignment="CENTER" layoutX="150.0" layoutY="222.0" onAction="#loginAction"
                   prefHeight="50.0" prefWidth="100.0" style="-fx-background-color: #03dac6;" text="Login">
            <font>
                <Font size="16.0"/>
            </font>
        </JFXButton>
    </children>
</AnchorPane>
